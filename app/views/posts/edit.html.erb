<div class="cover-edit">
  <div class="container">

    <h1 class="font-weight-normal mt-5 mb-5">Edit</h1>

    <% if @post.errors.any? %>
      <div class="card text-center text-white bg-danger mb-3 p-3">
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @post, local: true do |f| %>

      <div class="form-group mb-3">
        <label class="form-label">タイトル</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <label class="form-label">アーティスト名</label>
        <%= f.text_field :artist_name, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <label class="form-label">歌詞</label>
        <%= f.text_area :lyrics, rows: 1, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <label class="form-label">コメント</label>
        <%= f.text_area :comment, rows: 6, class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <label class="form-label">写真</label><br>
        <% if @post.image.attached? %>
          <%= image_tag @post.image, class: "img-fluid mb-2" %><br>
        <% end %>
        <%= f.file_field :image %>
      </div>

      <div class="form-group mb-3">
        <%= f.select :status,
          Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"), k] },
          {},
          class: "custom-select w-25"
        %>
      </div>

      <%= f.submit "更新", class: "btn btn-success" %>
      <%= link_to "戻る", post_path(@post), class: "btn btn-dark ms-2" %>

    <% end %>

  </div>
</div>
