<div class="posts-list">
  <% @posts.each do |post| %>
    <%= link_to post_path(post), class: "post-card-link" do %>
      <div class="card post-card shadow-sm mb-3">
        <div class="card-body d-flex gap-3 align-items-start">

          <!-- アイコン -->
          <div class="avatar">
            <div class="avatar-fallback">
              <%= post.user.name.first.upcase rescue "U" %>
            </div>
          </div>

          <!-- テキスト -->
          <div class="flex-grow-1">
            <div class="d-flex justify-content-between">
              <div class="fw-bold"><%= post.user.name %></div>
              <small class="text-muted"><%= time_ago_in_words(post.created_at) %>前</small>
            </div>

            <div class="text-primary small">
              / <%= post.title %>
            </div>

            <div class="text-muted small">
              <%= truncate(post.text, length: 40) %>
            </div>
          </div>

          <!-- サムネ -->
          <% if post.image.attached? %>
            <div class="thumb">
              <%= image_tag post.image.variant(resize_to_fill: [72,72]), class: "thumb-img" %>
            </div>
          <% end %>

        </div>
      </div>
    <% end %>
  <% end %>
</div>
